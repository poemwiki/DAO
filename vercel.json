{
  "version": 2,
  "outputDirectory": "dist",
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/public/(.*)", "destination": "/public/$1" },
    { "source": "/(.*)", "destination": "/api" }
  ]
}
