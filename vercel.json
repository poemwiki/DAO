{
  "version": 2,
  "outputDirectory": "dist",
  "builds": [
    { "src": "src/server/index.ts", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/public/(.*)", "destination": "/public" },
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/(.*)", "destination": "/src/server/index.ts" }
  ]
}
